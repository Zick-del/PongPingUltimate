<div tabindex="-2" class="player" style=@MyStyle @onkeydown="Move"></div>

@code {

  private static int left = 16;
  private static string MyStyle = $"left: {left}vw;";

  private void Move(KeyboardEventArgs e)
  {
    System.Console.WriteLine("works");
    System.Console.WriteLine(e.Key);

    if (e.Key == "ArrowLeft")
    {
      if (left > 0) left -= 1;
    }
    else if (e.Key == "ArrowRight")
    {
      if (left < 33) left += 1;
    }


    MyStyle = $"left: {left}vw;";
  }


}